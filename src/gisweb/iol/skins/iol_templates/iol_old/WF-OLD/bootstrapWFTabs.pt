<tal:block tal:define="
    selection options/fieldvalue;
    actionurl python: '%s/%s/content_status_modify' %(context.REQUEST.PARENTS[0].getParentDatabase().absolute_url(),context.REQUEST.PARENTS[0].getId());">
    <ul class="nav nav-tabs" id="workflowTab">
        <!-- <li class="active"><a href="#home">Home</a></li> -->
        <tal:loop tal:repeat="v selection">
            <li><a tal:attributes="href python: '#%s' % v['id']" tal:content="python: v['title'] or v['id']">Profile</a></li>
        </tal:loop>
    </ul>

    <div class="tab-content">
        <!-- <div class="tab-pane active" id="home">...</div> -->
        <tal:loop tal:repeat="v selection">
            <div tal:attributes="class python: 'tab-pane active' if v['id']==selection[0]['id'] else 'tab-pane';
                id v/id">
                    <div class="alert alert-info"
                    tal:content="python: v.get('description') or 'NEssuna descrizione'">description goes here</div>
                    <a class="btn pull-right wf-actions"
                        tal:define="id v/id"
                        tal:attributes="id string:btn_wf_${id}; href string:${actionurl}?workflow_action=${id};"
                        tal:content="python: v['title'] or v['id']">Title goes here</a>
            </div>
        </tal:loop>
    </div>
</tal:block>
<script>
  jQuery('#workflowTab a:first').click(function (e) {
  e.preventDefault();
  jQuery(this).tab('show');
})
</script>