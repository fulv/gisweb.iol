<tal:def tal:define="    size python:options['field'].getSettings('size') or '';    v options/fieldvalue;    id options/fieldname;    title python:options['field'].title;    ttip_title title;    ttip_descr python:options['field'].Schema()['fieldDescription'].getAccessor(options['field'])();    custom_attributes python:options['field'].Schema()['customAttributes'].getAccessor(options['field'])();    readonly python: 'readonly' if 'readonly' in custom_attributes and not v else '';    dy_hidewhen python: 'dynamicHidewhen' if 'dynamicHidewhen' in custom_attributes else '';    data_mandatory python: 'data-mandatory' if 'data-mandatory' in custom_attributes and not v else '';    mandatory python: 'mandatory' if options['field'].getMandatory() else ''">        <label class="control-label"><span tal:content="python:'%s: ' % title">Titolo</span>            <i tal:condition="ttip_descr" class="icon-info-sign" data-fade-speed="10" data-trigger="hover" tal:attributes="title ttip_title;data-content ttip_descr"></i>        </label>        <span tal:define="widget python:options['field'].getSettings('widget');">            <tal:widget tal:condition="python:test(widget=='TEXT')">                <input type="text" tal:attributes="                    id options/fieldname;                    name options/fieldname;                    value options/fieldvalue;                    maxlength size;                    readonly readonly;                    data-dhw dy_hidewhen;                    class string:${mandatory} ${data_mandatory} field span12"/>            </tal:widget>            <tal:widget tal:condition="python:test(widget=='TEXTAREA')">                <textarea tal:attributes="                    id options/fieldname;                    name options/fieldname;                     readonly readonly;                    rows size;                    data-dhw dy_hidewhen;                    class string:${mandatory} ${data_mandatory} field span12"                 tal:content="options/fieldvalue">text</textarea>            </tal:widget>        </span></tal:def>