<tal:def tal:define="    title python:options['field'].title;    selection options/selection;    lselection python:[f.split('|') for f in selection];    current options/fieldvalue;    widget python:options['field'].getSettings('widget');    lcurrent python:test(hasattr(current,'split'),[current],current);    labeled python:[e for e in lselection if e[1] in lcurrent]">    <label tal:condition="python:widget!='CHECKBOX' and len(labeled)==1" tal:content="python:'%s: ' % title">Titolo</label>           <tal:loop tal:repeat="v labeled">            <div class="uneditable control-label" tal:content="python:v[0]">selected value</div>             <tal:sep tal:condition="not:repeat/v/end" tal:content="structure python:options['field'].getSettings('separator')">separator</tal:sep>        </tal:loop></tal:def>