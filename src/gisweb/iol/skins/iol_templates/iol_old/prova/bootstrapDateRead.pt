<tal:block tal:define="    v options/fieldvalue;    id options/fieldname;    title python:options['field'].title;    ttip_title title;    ttip_descr python:options['field'].Schema()['fieldDescription'].getAccessor(options['field'])();    custom_attributes python:options['field'].Schema()['customAttributes'].getAccessor(options['field'])();    mandatory python: 'mandatory' if 'data-mandatory' in custom_attributes and not v else '';    description python:options['field'].description;    db python: options['field'].getParentDatabase();    defaultformat python:db.getDateTimeFormat();    fieldformat python:options['field'].getSettings('format');    format python:test(not(fieldformat),defaultformat,fieldformat);    fieldvalue python: None if not(v) else v.strftime(format);">      <label tal:content="python:'%s: ' % title">Titolo</label>        <div tal:attributes="class string:control-label uneditable ${mandatory}" tal:content="fieldvalue"></div>          </tal:block>